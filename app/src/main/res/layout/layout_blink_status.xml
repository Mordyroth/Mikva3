<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/table_map"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/red_circle_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/circle_red"
                tools:layout_editor_absoluteX="207dp"
                tools:layout_editor_absoluteY="212dp" />

            <TextView
                android:id="@+id/red_circle_text_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Help (Blinking - Next)"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/green_circle_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/circle_green"
                tools:layout_editor_absoluteX="103dp"
                tools:layout_editor_absoluteY="298dp" />

            <TextView
                android:id="@+id/green_circle_text_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready (Blinking - Next)"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="4dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/orange_circle_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/circle_orange"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="176dp" />

            <TextView
                android:id="@+id/orange_circle_text_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ready For Cleaning"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/blue_squere_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:srcCompat="@drawable/blue_squere"
                tools:layout_editor_absoluteX="281dp"
                tools:layout_editor_absoluteY="167dp" />

            <TextView
                android:id="@+id/blue_squere_text_map"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Room Cleaned And Ready"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>