<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="room_number_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_6sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="room_image">
        <item name="android:padding">@dimen/_1sdp</item>
        <item name="android:layout_width">@dimen/_12sdp</item>
        <item name="android:layout_height">@dimen/_12sdp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:src">@drawable/circle_red</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorWhite</item>
        <item name="android:bottomDark">@color/colorWhite</item>
        <item name="android:bottomMedium">@color/colorWhite</item>
        <item name="android:centerBright">@color/colorWhite</item>
        <item name="android:centerDark">@color/colorWhite</item>
        <item name="android:centerMedium">@color/colorWhite</item>
        <item name="android:fullBright">@drawable/progress_drawable</item>
        <item name="android:fullDark">@drawable/progress_drawable</item>
        <item name="android:topBright">@color/colorWhite</item>
        <item name="android:topDark">@color/colorWhite</item>
    </style>

    <style name="AppTheme.ProgressDialog.Theme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <!--  <item name="android:windowBackground">@android:color/transparent</item>-->
        <item name="android:windowTitleStyle">@null</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>

        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:layout_margin">0dp</item>
        <item name="colorAccent">@color/colorPrimary</item>

        <item name="android:layout_gravity">center</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
